<h1>Blogger so new</h1>
<main>
<% if @errors %>
    <ul>
    <% @errors.each do |error| %>
      <li style= "color: red"><%= error %></li>
    <% end %>
    </ul>
  <% end %>
<hr>
  <p><%= form_for @blogger do |f| %></p> 
  <p><%= f.label :name, "+Name" %>
     <%= f.text_field :name %></p>
  <p style='text-align:left'><%= f.label :age, "🥲Age" %>
     <%= f.number_field :age %></p>
  <p><%= f.label :bio, "😝 Bio" %>
     <%= f.text_field :bio %></p>
  <hr>
  <p><%= f.submit "Submit" %></p>
  <% end %>
</main>
